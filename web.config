<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Enable HTTP compression -->
        <urlCompression doStaticCompression="true" doDynamicCompression="true" />
        
        <!-- Configure static content caching -->
        <staticContent>
            <!-- Set default expiration to 7 days -->
            <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
            
            <!-- Add proper MIME types -->
            <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
            <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
        </staticContent>
        
        <!-- Configure HTTP response headers -->
        <httpProtocol>
            <customHeaders>
                <!-- Security headers -->
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                
                <!-- Cache control for specific file types -->
                <add name="Cache-Control" value="public, max-age=31536000" />
            </customHeaders>
        </httpProtocol>
        
        <!-- Configure caching for specific file types -->
        <rewrite>
            <outboundRules>
                <!-- Cache CSS files for 1 year -->
                <rule name="CacheCSS" preCondition="IsCSS">
                    <match serverVariable="RESPONSE_Cache-Control" pattern=".*" />
                    <action type="Rewrite" value="public, max-age=31536000" />
                </rule>
                <preConditions>
                    <preCondition name="IsCSS">
                        <add input="{RESPONSE_CONTENT_TYPE}" pattern="^text/css" />
                    </preCondition>
                </preConditions>
                
                <!-- Cache JavaScript files for 1 year -->
                <rule name="CacheJS" preCondition="IsJS">
                    <match serverVariable="RESPONSE_Cache-Control" pattern=".*" />
                    <action type="Rewrite" value="public, max-age=31536000" />
                </rule>
                <preConditions>
                    <preCondition name="IsJS">
                        <add input="{RESPONSE_CONTENT_TYPE}" pattern="^application/javascript" />
                    </preCondition>
                </preConditions>
                
                <!-- Cache images for 1 year -->
                <rule name="CacheImages" preCondition="IsImage">
                    <match serverVariable="RESPONSE_Cache-Control" pattern=".*" />
                    <action type="Rewrite" value="public, max-age=31536000" />
                </rule>
                <preConditions>
                    <preCondition name="IsImage">
                        <add input="{RESPONSE_CONTENT_TYPE}" pattern="^image/" />
                    </preCondition>
                </preConditions>
                
                <!-- Cache fonts for 1 year -->
                <rule name="CacheFonts" preCondition="IsFont">
                    <match serverVariable="RESPONSE_Cache-Control" pattern=".*" />
                    <action type="Rewrite" value="public, max-age=31536000" />
                </rule>
                <preConditions>
                    <preCondition name="IsFont">
                        <add input="{RESPONSE_CONTENT_TYPE}" pattern="^application/font-" />
                    </preCondition>
                </preConditions>
                
                <!-- Cache HTML for 1 day -->
                <rule name="CacheHTML" preCondition="IsHTML">
                    <match serverVariable="RESPONSE_Cache-Control" pattern=".*" />
                    <action type="Rewrite" value="public, max-age=86400" />
                </rule>
                <preConditions>
                    <preCondition name="IsHTML">
                        <add input="{RESPONSE_CONTENT_TYPE}" pattern="^text/html" />
                    </preCondition>
                </preConditions>
            </outboundRules>
        </rewrite>
    </system.webServer>
</configuration>